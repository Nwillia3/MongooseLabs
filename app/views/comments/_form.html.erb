<%= form_for([@post, @post.comments.build]) do |f| %>

	<div class="container">
		<div class="row">
			<div class="col-lg-10 ">

				<div class="form-group">  
				
				  <%= f.text_area :body, class: "form-control" %>
				</div>

				
				<div class="form-group">
				  <%= f.submit "Create Comment", class: "btn btn-primary" %>
				</div>   
			</div>		
		</div>
	</div>
	
<% end %>