<div class="container">
	<div class="row">
		<div class="col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-2">
			<div class="panel panel-default">
			<div class="panel-heading">
			  <h2 class="question-new-item">New Post</h2>
			</div>
        	<div class="panel-body">

				<%= form_for(@post) do |f| %>
					<div class="form-group">  
					  <%= f.label :title, "Headline" %> 
					  <%= f.text_field :title, placeholder: "What is the title of your post", class: "form-control" %>
					</div>

					<div class="form-group">  
					  <%= f.label :body %>
					  <%= f.text_area :body, 
					                    placeholder: "Express yourself",
					                    class: "form-control" %>
					</div>

					
					<div class="form-group">
					  <%= f.submit "Submit question", class: "btn btn-primary" %>
					</div>    
				<% end %>
			</div>
		</div>
	</div>
</div>