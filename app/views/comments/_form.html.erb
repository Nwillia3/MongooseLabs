<div id="content-wrapper">

	<div class="site">

		<%= form_for([@post, @post.comments.build]) do |f| %>

	
			<div class="col-lg-10 col-sm-8">

				<div class="form-group">  
				
				  <%= f.text_area :body, class: "form-control" %>
				</div>

				
				<div class="form-group">
				  <%= f.submit "Create Comment", class: "btn btn-primary" %>
				</div>   
			</div>		
				
			
		<% end %>
	</div>
</div>